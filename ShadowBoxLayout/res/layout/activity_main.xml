<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="${relativePackage}.${activityClass}" >

    <View
        android:layout_width="205dp"
        android:layout_height="5dip"
        android:layout_below="@+id/some_layout_item"
        android:background="@drawable/shadowbe" >
    </View>

    <LinearLayout
        android:id="@+id/some_layout_item"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Shadowbe"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <View
        android:layout_width="5dp"
        android:layout_height="202dp"
        android:layout_alignTop="@+id/some_layout_item"
        android:layout_toRightOf="@+id/some_layout_item"
        android:background="@drawable/shadowbe" />

</RelativeLayout>